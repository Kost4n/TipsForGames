<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main_page">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:src="@drawable/title_mainpage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/story_history"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/title_story_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"/>
    <ImageView
        android:id="@+id/story_facts"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/title_story_facts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/story_history"/>
    <ImageView
        android:id="@+id/story_dice"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/title_story_tips_dice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/story_facts"
        />

    <ImageView
        android:id="@+id/image_play_game"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:src="@drawable/button_image_play_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bottom_bar"/>
    <ImageView
        android:id="@+id/button_image_play"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_image_home"
        android:src="@drawable/ic_play"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:id="@+id/button_image_polit"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_image_home"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_rec"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:id="@+id/button_image_home"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_home"
        android:layout_marginBottom="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>