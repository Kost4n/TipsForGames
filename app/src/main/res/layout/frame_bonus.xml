<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_frame_bonus">

    <ImageView
        android:id="@+id/bonus_text"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/bonus_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/gift_open"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/gift_open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/gift_open_cap"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/gift_open_cap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="170dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/bonus_score"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:src="@drawable/bonus_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/gift_close"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/gift_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>